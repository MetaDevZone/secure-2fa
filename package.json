{
  "name": "secure-email-otp",
  "version": "1.0.0",
  "description": "A secure, developer-friendly Node.js package for email-based OTP (2FA) with strong security controls",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "otp",
    "2fa",
    "email",
    "security",
    "authentication",
    "typescript",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/secure-email-otp.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/secure-email-otp/issues"
  },
  "homepage": "https://github.com/yourusername/secure-email-otp#readme",
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@sendgrid/mail": "^8.0.1",
    "bcrypt": "^5.1.1",
    "ioredis": "^5.3.2",
    "mailgun.js": "^12.0.3",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.2",
    "nodemailer": "^6.9.7",
    "postmark": "^4.0.5",
    "uuid": "^9.0.1"
  },

  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.0",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "prisma": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
